#!/usr/bin/env ruby
require "pathname"
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile",
  Pathname.new(__FILE__).realpath)

require 'bundler'
Bundler.require(:default, ENV['RACK_ENV'].to_sym)

Dotenv.load unless ENV['RACK_ENV'] == 'production'

require File.expand_path('../../lib/frgnt.rb',Pathname.new(__FILE__).realpath)

Frgnt::Store.config do
  set_store :redis, ENV['STORE_SECRET']
  logger Logger.new(File.expand_path("../../log/#{ENV['RACK_ENV']}.log",__FILE__))
end

Frnt::Log.log(2,"Fetching Currency Data...Starting!")
Frgnt::Store.fetch
Frnt::Log.log(2,"Fetching Currency Data...Complete!")
